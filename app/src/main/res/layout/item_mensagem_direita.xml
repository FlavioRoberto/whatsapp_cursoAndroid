<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/marginConversa"
    android:layout_marginTop="@dimen/marginTopMensagem"
    android:layout_marginBottom="@dimen/marginBottonMensagem"
    android:padding="4dp"
    android:background="@drawable/backgroud_item_mensagem_direita">


    <TextView
        android:gravity="right"
        android:id="@+id/tv_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mensagem..."
        android:textSize="@dimen/tamanhoTextoMensagem"
        android:maxWidth="@dimen/widthMaxMensagem"
        android:textIsSelectable="true"

       />
    <ImageView android:id="@+id/imageRecebido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
       />
    <ImageView android:id="@+id/imageVisualizado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        />

</LinearLayout>
</RelativeLayout>