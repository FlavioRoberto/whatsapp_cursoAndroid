<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.whatsapp_cursoandroid.activity.activity.validadorActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_heigth"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:text="VALIDAÇÃO"
        android:textStyle="bold"
        android:textSize="@dimen/H1"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:text="Você recebeu um SMS para validação do seu número, digite o código abaixo"
        android:textStyle="bold"
        android:textSize="@dimen/H2"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite o código"
        android:layout_gravity="center"
        android:layout_weight="0.95">

        <EditText
            android:hint="Digite o código"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right"
        android:background="@drawable/btn_avancar"
        android:padding="8dp"  />

    </LinearLayout>

</LinearLayout>
